<div class="jumbotron container-md top">
<h3>Burgers yet to be devoured!</h3>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block devoure=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="mid-bot container-md">
  <h3>LETTUCELETTUCELETTUCELETTUCELETTUCELETTUCELETTUCELETTUCELETTUCE</h3>
</div>

<div class="jumbotron container-md middle">
<h2>Devoured burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block devoure=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="form-group jumbotron container-md bottom">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group form-check">
    <label for="devoured">Devoured?</label><br>
    <input type="checkbox" name="eaten" value="1" checked> Devoured!<br>
    <input type="checkbox" name="eaten" value="0"> Not Devoured
  </div>

  <button type="submit" class="btn btn-primary">Add Burger</button>
</form>

</div>